<link href="/css/song-charts.css" rel="stylesheet">
<script src="//cdn.jsdelivr.net/npm/chart.js"></script>
<script src="//cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
<script>let songId = '{{songId}}'; let artistId = '{{artistId}}';</script>
<script src="/js/main.js"></script>
<script src="/js/song-charts.js"></script>

<div id="chartjs-canvas-container">
	<header>
		<div class="title">
			<span id="songTitle"></span> by <a href="/artists/{{artistId}}/songs">{{artistName}}</a>
		</div>
		<div id="artist-other-songs-container">
			<div>
				<select id="artist-other-songs"></select>
			</div>
			<div class="bold">
				All {{artistName}} songs by:
				<a class="bold" href="/artists/{{artistId}}/songs">Peak position</a> | <a class="bold" href="/artists/{{artistId}}/songs/charts">Weekly performance</a>
			</div>
			<div>
				Click graph points to view full charts for each week
			</div>
		</div>
	</header>
	<span>
		<canvas id="chartjs-canvas"></canvas>
		<footer>
			<div class="footer-select">
				<div>
					<select id="artists"></select>
				</div>
				<div>
					<select id="chart-date"></select>
				</div>
			</div>
		</footer>
	</span>
</div>
