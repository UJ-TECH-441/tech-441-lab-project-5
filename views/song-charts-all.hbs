<link href="/css/song-charts.css" rel="stylesheet">
<script src="//cdn.jsdelivr.net/npm/chart.js"></script>
<script src="//cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
<script>let artistId = '{{artistId}}';</script>
<script src="/js/main.js"></script>
<script src="/js/song-charts-all.js"></script>

<div id="chartjs-canvas-container">
	<header>
		<div class="title">All songs by <a href="/artists/{{artistId}}/songs">{{artistName}}</a></div>
		<div class="subtitle">
			Click titles to see details for specific songs or graph points to view full chart for corresponding week
		</div>
	</header>
	<span>
		<canvas id="chartjs-canvas"></canvas>
		<footer>
			<div class="footer-select">
				<div>
					<select id="artists"></select>
				</div>
				<div>
					<select id="chart-date"></select>
				</div>
			</div>
		</footer>
	</span>
</div>
